<div class="container">
<table class="table">
  <thead>
  <tr>
    <th class="sortable-column">Title</th>
    <th class="sortable-column sort-asc">Created At</th>
    <th class="sortable-column sort-desc">Updated At</th>
    <th class="sortable-column sort-desc">Edit</th>
    <th class="sortable-column sort-desc">Delete</th>
  </tr>
  </thead>
  <tbody>
  <% @roles.each do |role| %>
    <tr>
      <td><%= role.title %></td>
      <td><%= role.created_at.strftime("%m/%d/%Y")  %></td>
      <td><%= role.updated_at.strftime("%m/%d/%Y") %></td>
      <td><%= link_to edit_link(role)
      %></td>
      <td><%= link_to content_tag( :button, "Delete", class: "button small-button danger deleterole"),
                          role_path(role),
                          data: { confirm: 'Are you sure?' },
                          method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>
  <% if @roles.empty? %>
      <div class="alert alert-info"><h1 style="color: #ffc194; margin-left:300px; font-family: 'Trebuchet MS'">Oops? no role a new role</h1></div>
  <% end %>
</div>
